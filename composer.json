{
    "name": "charlesportwoodii/yii2-api",
    "description": "Yii2 API Skeleton",
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "Charles R. Portwood II",
        "email": "charlesportwoodii@erianna.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1.2",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-PDO": "*",
        "ext-Reflection": "*",
        "ext-sodium": ">=2.0.0",
        "ext-redis": ">=3.1.0",
        "ext-PDO_MySQL": "*",
        "ext-hash": "*",
        "ext-json": "*",
        "ext-pcntl": "*",
        "ext-pcre": "*",
        "ext-posix": "*",
        "yiisoft/yii2": "~2.0.13",
        "yiisoft/yii2-redis": "~2.0.0",
        "yiisoft/yii2-twig": "~2.0.0",
        "yiisoft/yii2-smarty": "~2.0.0",
        "symfony/yaml": "^3.0",
        "charlesportwoodii/yii2-api-rest-components": "dev-master",
        "christian-riesen/base32": "1.3.1",
        "monolog/monolog": "^1.23",
        "rpq/server": "dev-master",
        "yiisoft/yii2-httpclient": "^2.0",
        "yii2mod/yii2-rbac": "*"
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "yiisoft/yii2-faker": "^2.0",
        "fzaninotto/faker": "^1.6",
        "codeception/specify": "*",
        "codeception/verify": "*",
        "flow/jsonpath": "^0.3.4",
        "php-http/curl-client": "^1.7",
        "mohrekopp/php-mailhog-client": "dev-master",
        "yiisoft/yii2-gii": "^2.0.5"
    },
    "replace": {
		"bower-asset/typeahead.js": "*"
	},
	"conflict": {
        "bower-asset/typeahead.js": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p runtime/logs",
            "mkdir -p runtime/cache"
        ]
    }
}
